# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
NEXT_PUBLIC_STRIPE_PRICING_TABLE_ID=prctbl_your-pricing-table-id

# Email Service (Resend)
RESEND_API_KEY=re_your-api-key

# Error Tracking (Sentry) - Optional
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Management
# Comma-separated list of email addresses that should automatically receive admin privileges
# These users will be auto-assigned 'admin' role when they sign up or log in
# Example: ADMIN_EMAILS=admin@example.com,owner@company.com,superadmin@example.com
ADMIN_EMAILS=

